@{
    Layout = "/Views/Shared/_Layout.cshtml";
    Book.Model.T_Base_Book book = ViewBag.book;
}


<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> 书籍修改</h3>

        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> 书籍修改</h4>
                    <form class="form-horizontal style-form" action="/Index/UpdateSave" method="post">

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input type="hidden" class="form-control" id="BookId" name="Id" value="@book.Id">
                            </div>
                        </div>




                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">书籍名称</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="BookName" name="BookName" value="@book.BookName">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">作者</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Author" name="Author" value="@book.Author">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">出版社</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="PressName" name="PressName" value="@book.PressName">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">书号</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="SN" name="SN" value="@book.SN">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">版次</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Version" name="Version" value="@book.Version">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">价格</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Price" name="Price" value="@book.Price">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-sm-10">

                                <input type="submit" name="Save" value="提交 " class="btn btn-primary btn-lg" />
                            </div>
                        </div>


                    </form>
                </div>
            </div><!-- col-lg-12-->
        </div>
        <!-- /row -->

    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->
