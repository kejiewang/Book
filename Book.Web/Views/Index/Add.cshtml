@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> 书籍信息</h3>

        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> 书籍添加</h4>
                    <form class="form-horizontal style-form" action="/Index/AddSave" method="post">
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">书籍名称</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="BookName" name="BookName">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">作者</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Author" name="Author">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">出版社</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="PressName" name="PressName">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">书号</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="SN" name="SN">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">版次</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Version" name="Version">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">价格</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Price" name="Price">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-sm-10">

                                <input type="submit" name="Save" value="提交 " class="btn btn-primary btn-lg" />
                            </div>
                        </div>


                    </form>
                </div>
            </div><!-- col-lg-12-->
        </div>
        <!-- /row -->

    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->
